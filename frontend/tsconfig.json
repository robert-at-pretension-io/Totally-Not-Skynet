{
    "compilerOptions": {
      "allowJs": true,
      "lib": ["ES2022", "dom"],
      "baseUrl": "./src",
      "outDir": "./dist",
      "target": "es6",
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "typeRoots": [
        "./node_modules/@types"
      ],
    },
    "include": [
      "src/**/*"
    ]
  }